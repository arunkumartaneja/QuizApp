<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="QuestionView" parent="AppTheme">
        <item name="android:padding">@dimen/layout_margin</item>
    </style>

    <style name="RadioGroupView" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/layout_margin</item>
        <item name="android:paddingStart">@dimen/layout_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditTextView" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/layout_margin</item>
        <item name="android:paddingStart">@dimen/layout_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

</resources>
